<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/theme_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/small_title_text_size"
        tools:text="脱单大作战"/>

    <!--热门动态-->
    <android.support.v4.view.ViewPager
        android:id="@+id/picsViewPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:background="@color/md_green_400"/>

    <RelativeLayout
        android:id="@+id/hot_dyns"
        android:layout_width="fill_parent"
        android:layout_height="160dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/weibo_avatar"
            android:layout_width="@dimen/group_face_small"
            android:layout_height="@dimen/group_face_small"
            tools:src="@drawable/face"/>

        <TextView
            android:id="@+id/weibo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/weibo_avatar"
            android:textSize="@dimen/sub_title_text_size"
            tools:text="名字"/>

        <TextView
            android:id="@+id/weibo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weibo_name"
            android:layout_toEndOf="@id/weibo_avatar"
            android:textSize="@dimen/sub_title_text_size"
            tools:text="日期"/>

        <TextView
            android:id="@+id/weibo_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weibo_avatar"
            android:maxLines="3"
            android:textSize="@dimen/sub_title_text_size"
            tools:text="内容\n12\n12"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_like_grey"/>

            <TextView
                android:id="@+id/weibo_attitudes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:textColor="#A7a7a7"
                android:textSize="12sp"
                tools:text="20"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_chat_24dp"/>

            <TextView
                android:id="@+id/weibo_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:textColor="#A7a7a7"
                android:textSize="12sp"
                tools:text="30"/>

        </LinearLayout>

    </RelativeLayout>

    <!--详情报名等-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="详情"/>

        <Button
            android:id="@+id/boom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Boom"/>

        <TextView
            android:id="@+id/countdown_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boom_button"
            android:layout_centerHorizontal="true"
            tools:text="12:22"/>

        <Button
            android:id="@+id/participate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="报名"/>


        <TextView
            android:id="@+id/num_of_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/participate_button"
            android:layout_marginEnd="16dp"
            tools:text="1100"/>

    </RelativeLayout>

</LinearLayout>