<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:background="@drawable/face"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="doudou"/>

    <TextView
        android:id="@+id/dyns_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="From dadada"/>

    <TextView
        android:id="@+id/user_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ssss"/>

    <LinearLayout
        android:id="@+id/weibo_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/weibo_pic0"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic1"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic2"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic3"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic4"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic5"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic6"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic7"
            layout="@layout/weibo_pic"/>

        <include
            android:id="@+id/weibo_pic8"
            layout="@layout/weibo_pic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/face"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/face"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/face"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6"/>


    </LinearLayout>


</LinearLayout>