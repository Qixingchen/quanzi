<LinearLayout
    android:id="@+id/newGroupStep1Fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tizi.quanzi.ui.new_group.NewGroupStep1Fragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/UserPhotoImageView"
        android:layout_width="@dimen/group_face_small"
        android:layout_height="@dimen/group_face_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_camera_alt_48dp"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/quanziNameInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="@string/input_quanzi_name"
            android:textSize="@dimen/normal_edit_text_size"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/quanziSignInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="输入圈圈签名"
            android:textSize="@dimen/normal_edit_text_size"/>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>
