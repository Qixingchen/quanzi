<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.tizi.quanzi.ui.quanzi_zone.QuanziSetFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginTop="48dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@color/md_grey_900"
                        android:text="圈子名称"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:id="@+id/quanzi_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_edit_text_size"
                        tools:text="23333333333"/>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginTop="48dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@color/md_grey_900"
                        android:text="标签"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:id="@+id/quanzi_tag"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_edit_text_size"
                        tools:text="23333333333"/>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginTop="48dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@color/md_grey_900"
                        android:text="圈子签名"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:id="@+id/quanzi_sign"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_edit_text_size"
                        tools:text="23333333333"/>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginTop="48dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@color/md_grey_900"
                            android:text="消息免打扰"
                            android:textSize="@dimen/normal_text_size"/>

                        <Switch
                            android:id="@+id/mess_notifi_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/delete_mess"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="清空聊天记录"
                        android:textSize="@dimen/normal_edit_text_size"/>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/exit_quanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="退出圈圈"
                android:textSize="@dimen/small_title_size"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
