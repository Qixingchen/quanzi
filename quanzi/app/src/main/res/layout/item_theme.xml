<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/md_blue_700">

    <TextView
        android:id="@+id/theme_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="#bcc7d7"
        android:textSize="@dimen/small_title_text_size"
        tools:text="脱单大作战"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/theme_pic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="100%"
            tools:background="@color/md_green_400"/>

        <TextView
            android:id="@+id/countdown_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/md_grey_700"
            android:textColor="@color/md_white"
            android:textSize="@dimen/normal_text_size"
            tools:text="12:12"/>

        <TextView
            android:id="@+id/theme_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/theme_pic"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="@drawable/theme_name_corners"
            android:maxLines="1"
            android:textColor="@color/md_grey_700"
            android:textSize="@dimen/sub_title_text_size"
            tools:background="@color/md_white"
            tools:text="123"/>

    </android.support.percent.PercentRelativeLayout>


</LinearLayout>