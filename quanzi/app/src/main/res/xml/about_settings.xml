<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="关于">
        <Preference
            android:key="version"
            android:title="软件版本">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/update_notices"/>
        </Preference>

        <Preference
            android:key="flavor"
            android:title="软件渠道">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/update_notices"/>
        </Preference>

        <Preference
            android:summary="@string/open_source_license"
            android:title="开源协议">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/open_source_license"/>
        </Preference>

        <Preference
            android:summary="@string/user_license"
            android:title="用户协议">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/user_license"/>
        </Preference>

        <Preference
            android:summary="@string/feedback_mail"
            android:title="意见反馈">

            <intent
                android:action="android.intent.action.SENDTO"
                android:data="@string/feedback_mail"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>